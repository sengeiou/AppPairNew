<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="200px"
		android:layout_marginRight="200px"
		android:background="@drawable/shadow_bg"
		android:clickable="true">

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#fff">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="30px">

				<TextView
					android:id="@+id/text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="    XXX 同学\n    本次课程从 10点30分 开始，至 10点30分 结束，共计 1小时30分钟，请您确认。"
					android:textColor="#000"
					android:textSize="40px"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="30px"
					android:orientation="horizontal">

					<com.lys.base.view.ClickTextView
						android:id="@+id/btnQuestion"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@drawable/img_selection_yes"
						android:gravity="center"
						android:paddingLeft="100px"
						android:paddingRight="100px"
						android:text="我有疑问"
						android:textColor="#fff"
						android:textSize="30px"/>

					<com.lys.base.view.ClickTextView
						android:id="@+id/btnOk"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="30px"
						android:background="@drawable/img_selection_yes"
						android:gravity="center"
						android:paddingLeft="100px"
						android:paddingRight="100px"
						android:text="确认"
						android:textColor="#fff"
						android:textSize="30px"/>

				</LinearLayout>

				<EditText
					android:id="@+id/inputMsg"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10px"
					android:background="@drawable/img_math_user_bg"
					android:gravity="top"
					android:hint="请输入您的疑问"
					android:inputType="textMultiLine"
					android:maxLength="1000"
					android:minLines="4"
					android:padding="20px"
					android:textColor="#454545"
					android:textColorHint="#a1a1a1"
					android:textSize="32px"/>

				<com.lys.base.view.ClickTextView
					android:id="@+id/btnCommit"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right"
					android:layout_marginTop="10px"
					android:background="@drawable/img_selection_yes"
					android:gravity="center"
					android:paddingLeft="100px"
					android:paddingRight="100px"
					android:text="提交"
					android:textColor="#fff"
					android:textSize="30px"/>

			</LinearLayout>
		</ScrollView>

	</RelativeLayout>

</RelativeLayout>
