<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingLeft="18px"
	android:paddingRight="18px">

	<LinearLayout
		android:id="@+id/groupCon"
		android:layout_width="match_parent"
		android:layout_height="80px"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/oper"
			android:layout_width="40px"
			android:layout_height="40px"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="30px"
			android:scaleType="center"
			android:src="@drawable/img_tree_add"
			android:visibility="visible"/>

		<TextView
			android:id="@+id/groupName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="30px"
			android:letterSpacing="0.12"
			android:text="名字名字"
			android:textColor="#fff"
			android:textSize="24px"/>

		<TextView
			android:id="@+id/groupFriendCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:letterSpacing="0.12"
			android:text="(00)"
			android:textColor="#fff"
			android:textSize="24px"/>

		<TextView
			android:id="@+id/groupMsgCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:background="@drawable/app_red"
			android:paddingLeft="10px"
			android:paddingRight="10px"
			android:text="123"
			android:textColor="#fff"
			android:textSize="20px"
			android:visibility="gone"/>

	</LinearLayout>

	<RelativeLayout
		android:id="@+id/userCon"
		android:layout_width="match_parent"
		android:layout_height="115px">

		<ImageView
			android:id="@+id/selectFlag"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:src="@drawable/img_friend_selected"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<com.lys.kit.view.RoundImageView
				android:id="@+id/head"
				android:layout_width="74px"
				android:layout_height="74px"
				android:layout_centerVertical="true"
				android:layout_marginLeft="46px"
				android:src="@drawable/img_default_head"
				app:radius="999px"/>

			<TextView
				android:id="@+id/name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginLeft="20px"
				android:layout_toRightOf="@id/head"
				android:letterSpacing="0.12"
				android:text="名字名字"
				android:textColor="#fff"
				android:textSize="30px"/>

			<TextView
				android:id="@+id/msgCount"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignLeft="@id/head"
				android:layout_alignTop="@id/head"
				android:layout_marginLeft="55px"
				android:layout_marginTop="55px"
				android:background="@drawable/app_red"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:text="123"
				android:textColor="#fff"
				android:textSize="20px"
				android:visibility="gone"/>

		</RelativeLayout>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:background="#81cfff"/>

</LinearLayout>
