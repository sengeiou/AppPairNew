<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="80px"
		android:layout_marginRight="80px"
		android:background="#fff">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="45px"
			android:layout_marginTop="5px"
			android:layout_marginRight="45px"
			android:layout_marginBottom="5px"
			android:background="@drawable/comment_show_bg"
			android:orientation="horizontal">

			<com.lys.kit.view.RoundImageView
				android:id="@+id/head"
				android:layout_width="106px"
				android:layout_height="106px"
				android:layout_marginLeft="30px"
				android:layout_marginTop="46px"
				android:src="@drawable/img_default_head"
				app:radius="999px"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="30px"
				android:layout_marginTop="46px"
				android:layout_marginRight="30px"
				android:orientation="vertical">

				<TextView
					android:id="@+id/name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:letterSpacing="0.12"
					android:text="名字名字"
					android:textColor="#040404"
					android:textSize="30px"/>

				<RatingBar
					android:id="@+id/rating"
					android:layout_width="wrap_content"
					android:layout_height="33px"
					android:isIndicator="true"
					android:progressDrawable="@drawable/star_small_progress_bg"
					android:stepSize="1"/>

				<TextView
					android:id="@+id/text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="45px"
					android:letterSpacing="0.12"
					android:text="文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字文字"
					android:textColor="#040404"
					android:textSize="30px"/>

				<TextView
					android:id="@+id/time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="30px"
					android:layout_marginBottom="30px"
					android:letterSpacing="0.12"
					android:text="15 天前"
					android:textColor="#d1d1d1"
					android:textSize="30px"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginTop="30px"
			android:layout_marginRight="60px"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/pass"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/app_btn"
				android:paddingLeft="40px"
				android:paddingTop="16px"
				android:paddingRight="40px"
				android:paddingBottom="16px"
				android:text="通过"
				android:textColor="#13121a"
				android:textSize="20px"/>

			<TextView
				android:id="@+id/delete"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="60px"
				android:background="@drawable/app_btn"
				android:paddingLeft="40px"
				android:paddingTop="16px"
				android:paddingRight="40px"
				android:paddingBottom="16px"
				android:text="删除"
				android:textColor="#13121a"
				android:textSize="20px"/>

		</LinearLayout>

	</RelativeLayout>

</RelativeLayout>
