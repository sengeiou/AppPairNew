<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="120px"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/head"
			android:layout_width="80px"
			android:layout_height="80px"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="30px"
			android:src="@drawable/img_default_head"/>

		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginLeft="30px"
			android:letterSpacing="0.12"
			android:text="名字名字"
			android:textColor="#000"
			android:textSize="24px"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical|right"
			android:orientation="horizontal">

			<CheckBox
				android:id="@+id/muteAudio"
				android:layout_width="72px"
				android:layout_height="72px"
				android:layout_marginRight="30px"
				android:button="@null"
				android:drawableLeft="@drawable/mute_audio"
				android:paddingLeft="8px"
				android:visibility="visible"/>

			<CheckBox
				android:id="@+id/lockWrite"
				android:layout_width="72px"
				android:layout_height="72px"
				android:layout_marginRight="30px"
				android:button="@null"
				android:drawableLeft="@drawable/lock_write"
				android:paddingLeft="8px"
				android:visibility="visible"/>

			<TextView
				android:id="@+id/check"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="30px"
				android:background="@drawable/app_btn"
				android:paddingLeft="40px"
				android:paddingTop="16px"
				android:paddingRight="40px"
				android:paddingBottom="16px"
				android:text="同步检查"
				android:textColor="#13121a"
				android:textSize="20px"/>

		</LinearLayout>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="1px"
		android:layout_marginLeft="30px"
		android:layout_marginRight="30px"
		android:background="#e1e1e1"/>

</LinearLayout>
