<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/img_home_bg">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/img_home_time_bg"
			android:gravity="center"
			android:orientation="vertical">

			<TextView
				android:id="@+id/time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="11:51"
				android:textColor="#fff"
				android:textSize="105px"
				android:textStyle="bold"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="2019 - 03 - 31"
					android:textColor="#fff"
					android:textSize="42px"/>

				<TextView
					android:id="@+id/week"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50px"
					android:text="星期五"
					android:textColor="#fff"
					android:textSize="35px"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="50px"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="40px">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="50px"
					android:layout_marginTop="20px"
					android:layout_marginRight="50px"
					android:gravity="center_horizontal"
					android:orientation="vertical">

					<ImageView
						android:id="@+id/show"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/img_home_girl"/>

					<TextView
						android:id="@+id/name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="20px"
						android:text="某某某"
						android:textColor="#fff"
						android:textSize="38px"/>

				</LinearLayout>

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/img_home_hi"/>

			</RelativeLayout>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/img_home_center_bg"
				android:orientation="vertical"
				android:padding="40px">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/task"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_task"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="任务"
							android:textColor="#fff"
							android:textSize="25px"/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/note"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_note"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="笔记本"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/topic"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_topic"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="刷题"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<RelativeLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content">

							<com.lys.base.view.ClickImageView
								android:id="@+id/im"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:src="@drawable/img_home_im"/>

							<TextView
								android:id="@+id/msgCount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginLeft="88px"
								android:layout_marginTop="8px"
								android:background="@drawable/img_msg_bg"
								android:gravity="center"
								android:paddingLeft="16px"
								android:paddingRight="16px"
								android:text="8"
								android:textColor="#ea2918"
								android:textSize="20px"/>

						</RelativeLayout>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="答疑"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/user"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_user"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="个人中心"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

					<LinearLayout
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/phone"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_phone"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="课程"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/friendManagerCon"
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical">

						<com.lys.base.view.ClickImageView
							android:id="@+id/friendManager"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_manager"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="好友管理"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

					<LinearLayout
						android:id="@+id/userManagerCon"
						android:layout_width="0px"
						android:layout_height="272px"
						android:layout_weight="1"
						android:gravity="center"
						android:orientation="vertical"
						android:visibility="visible">

						<com.lys.base.view.ClickImageView
							android:id="@+id/userManager"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/img_home_manager"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="18px"
							android:text="用户管理"
							android:textColor="#fff"
							android:textSize="25px"/>
					</LinearLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

	<FrameLayout
		android:id="@+id/effectContainer"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	</FrameLayout>

</RelativeLayout>
