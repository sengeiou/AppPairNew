<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="4px"
	android:background="@drawable/shape_app_bg"
	android:gravity="center_vertical"
	android:orientation="horizontal">

	<com.lys.kit.view.IconImageView
		android:id="@+id/icon"
		android:layout_width="100px"
		android:layout_height="100px"
		android:layout_marginLeft="18px"
		android:layout_marginTop="12px"
		android:layout_marginBottom="12px"
		android:scaleType="centerCrop"
		android:src="@drawable/img_default"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="24px"
		android:layout_marginRight="24px"
		android:layout_weight="1"
		android:orientation="vertical">

		<TextView
			android:id="@+id/name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:text="名字名字"
			android:textColor="#202122"
			android:textSize="24px"/>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/size"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="31.4 MB"
				android:textColor="#898989"
				android:textSize="20px"/>

			<TextView
				android:id="@+id/version"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="30px"
				android:text="(8472389748293)"
				android:textColor="#898989"
				android:textSize="20px"/>

		</LinearLayout>

		<TextView
			android:id="@+id/des"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:text="描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述描述"
			android:textColor="#898989"
			android:textSize="20px"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="150px"
		android:layout_height="60px"
		android:layout_marginRight="28px">

		<TextView
			android:id="@+id/btn"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/btn_progress_bg"
			android:gravity="center"
			android:text="按钮"
			android:textColor="#feba01"
			android:textSize="26px"/>

		<TextView
			android:id="@+id/newFlag"
			android:layout_width="15px"
			android:layout_height="15px"
			android:layout_alignParentRight="true"
			android:layout_marginTop="6px"
			android:layout_marginRight="6px"
			android:background="@drawable/new_flag_bg"
			android:gravity="center"
			android:text=""
			android:textColor="#fff"
			android:textSize="12px"/>

	</RelativeLayout>

</LinearLayout>
