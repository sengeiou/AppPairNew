<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/con"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="200px"
		android:layout_marginRight="200px"
		android:background="@drawable/shadow_bg"
		android:clickable="true">

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#fff">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:padding="30px">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30px"
					android:text="1、学生在本次课堂上与您积极互动，主动配合"
					android:textColor="#000"
					android:textSize="30px"/>

				<com.lys.kit.view.SelectionGroup
					android:id="@+id/selectionGroupHot"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30px"
					android:text="2、学生在本次课堂上能一直保持高度的注意力"
					android:textColor="#000"
					android:textSize="30px"/>

				<com.lys.kit.view.SelectionGroup
					android:id="@+id/selectionGroupMind"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30px"
					android:text="3、对于本次课堂的内容，学生能完全理解吃透"
					android:textColor="#000"
					android:textSize="30px"/>

				<com.lys.kit.view.SelectionGroup
					android:id="@+id/selectionGroupLogic"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="30px"
					android:text="其它情况："
					android:textColor="#000"
					android:textSize="30px"/>

				<EditText
					android:id="@+id/inputOther"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10px"
					android:background="@drawable/img_math_user_bg"
					android:focusable="false"
					android:gravity="top"
					android:hint="内容为空"
					android:inputType="textMultiLine"
					android:maxLength="1000"
					android:minLines="4"
					android:padding="20px"
					android:textColor="#454545"
					android:textColorHint="#a1a1a1"
					android:textSize="32px"/>

			</LinearLayout>
		</ScrollView>

	</RelativeLayout>

	<ImageView
		android:id="@+id/close"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/content"
		android:layout_alignRight="@id/content"
		android:layout_marginTop="-10px"
		android:layout_marginRight="-10px"
		android:background="@drawable/photo_btn_bg"
		android:src="@drawable/img_delete_photo">
	</ImageView>

</RelativeLayout>
