<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="600px"
	android:layout_height="wrap_content"
	android:layout_marginLeft="20px"
	android:layout_marginRight="20px">

	<com.lys.base.view.ClickImageView
		android:id="@+id/cover"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:src="@drawable/img_cover_1"/>

	<TextView
		android:id="@+id/name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="100px"
		android:layout_marginTop="322px"
		android:layout_marginRight="116px"
		android:ellipsize="end"
		android:gravity="center"
		android:lines="1"
		android:text="名字"
		android:textColor="#5affffff"
		android:textSize="28px"/>

	<TextView
		android:id="@+id/pageCount"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="645px"
		android:layout_marginRight="105px"
		android:ellipsize="end"
		android:lines="1"
		android:text="N 页"
		android:textColor="#5affffff"
		android:textSize="22px"/>

	<TextView
		android:id="@+id/dir"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="60px"
		android:layout_marginTop="645px"
		android:ellipsize="end"
		android:lines="1"
		android:text="dir"
		android:textColor="#5affffff"
		android:textSize="22px"/>

</RelativeLayout>
