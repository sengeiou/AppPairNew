<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="120px"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/oper"
				android:layout_width="40px"
				android:layout_height="40px"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="30px"
				android:scaleType="center"
				android:src="@drawable/img_tree_add"
				android:visibility="visible"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<LinearLayout
					android:id="@+id/groupCon"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/groupName"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="30px"
						android:letterSpacing="0.12"
						android:text="名字名字"
						android:textColor="#99d2f9"
						android:textSize="24px"/>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical|right"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/taskTable"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="任务表"
							android:textColor="#13121a"
							android:textSize="20px"/>

					</LinearLayout>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/userCon"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:visibility="gone">

					<ImageView
						android:id="@+id/head"
						android:layout_width="80px"
						android:layout_height="80px"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="30px"
						android:src="@drawable/img_default_head"/>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="30px"
						android:orientation="vertical">

						<TextView
							android:id="@+id/name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:letterSpacing="0.12"
							android:text="名字名字"
							android:textColor="#454545"
							android:textSize="24px"/>

						<TextView
							android:id="@+id/info"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:letterSpacing="0.12"
							android:text="名字名字"
							android:textColor="#a1a1a1"
							android:textSize="20px"/>

					</LinearLayout>

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="center_vertical|right"
						android:orientation="horizontal">

						<TextView
							android:id="@+id/group"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="---"
							android:textColor="#13121a"
							android:textSize="20px"/>

						<TextView
							android:id="@+id/teachRecord"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="上课记录"
							android:textColor="#13121a"
							android:textSize="20px"/>

						<TextView
							android:id="@+id/send"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="发送"
							android:textColor="#13121a"
							android:textSize="20px"/>

						<TextView
							android:id="@+id/task"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="任务"
							android:textColor="#13121a"
							android:textSize="20px"/>

						<TextView
							android:id="@+id/war"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="30px"
							android:background="@drawable/app_btn"
							android:paddingLeft="40px"
							android:paddingTop="16px"
							android:paddingRight="40px"
							android:paddingBottom="16px"
							android:text="专题"
							android:textColor="#13121a"
							android:textSize="20px"/>

					</LinearLayout>

				</LinearLayout>

			</RelativeLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			android:background="#e1e1e1"/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/cpCon"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="180px">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="120px"
			android:orientation="horizontal">

			<ImageView
				android:id="@+id/cpHead"
				android:layout_width="80px"
				android:layout_height="80px"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="30px"
				android:src="@drawable/img_default_head"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:layout_marginLeft="30px"
				android:orientation="vertical">

				<TextView
					android:id="@+id/cpName"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:letterSpacing="0.12"
					android:text="名字名字"
					android:textColor="#454545"
					android:textSize="24px"/>

				<TextView
					android:id="@+id/cpInfo"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:letterSpacing="0.12"
					android:text="名字名字"
					android:textColor="#a1a1a1"
					android:textSize="20px"/>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:gravity="center_vertical|right"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/cpTask"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="30px"
					android:background="@drawable/app_btn"
					android:paddingLeft="40px"
					android:paddingTop="16px"
					android:paddingRight="40px"
					android:paddingBottom="16px"
					android:text="任务"
					android:textColor="#13121a"
					android:textSize="20px"/>

				<TextView
					android:id="@+id/cpWar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="30px"
					android:background="@drawable/app_btn"
					android:paddingLeft="40px"
					android:paddingTop="16px"
					android:paddingRight="40px"
					android:paddingBottom="16px"
					android:text="战术板"
					android:textColor="#13121a"
					android:textSize="20px"/>

			</LinearLayout>

		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1px"
			android:layout_marginLeft="30px"
			android:layout_marginRight="30px"
			android:background="#e1e1e1"/>
	</LinearLayout>

</LinearLayout>
